<div class="row">
    <div class="col-md-4 text-left">
        <h2 class="text-center">Messages sent</h2>
		<p class="ladder-subtitle text-center">Cant. Stop. Typing.</p>
		<div id="chart-ladder-messages"></div>
    </div>
    <div class="col-md-4 text-left">
        <h2 class="text-center">Media sent</h2>
		<p class="ladder-subtitle text-center">Look at those cat pics!</p>
    </div>
    <div class="col-md-4 text-left">
        <h2 class="text-center">Emoji's used</h2>
        <p class="ladder-subtitle text-center">whut m8, do u even english?</p>
        <table class="table">
            <thead>
                <tr>
                    <td>Emoji</td>
                    <td>Amount</td>
                </tr>
            </thead>
            <tbody>
                {{#each emojis}}
                    <tr>
                        <td class="emoji">{{emoji}}</td>
                        <td>{{amount}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
